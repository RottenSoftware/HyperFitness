<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- HyperLayoutHeader -->
    <style name="HyperLayoutHeader">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- HyperLayoutHeader -->
    <style name="HyperContainerHeader">
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- HyperLayoutHeader -->
    <style name="HyperLayoutBar">
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/hyperGreen</item>
    </style>

    <!-- HyperTableHeaders -->
    <style name="HyperTableHeaders">
        <item name="android:textSize">16sp</item>
        <!--<item name="android:textSize">24sp</item> -->
        <item name="android:textStyle">bold</item>
    </style>

    <!-- HyperTableData -->
    <style name="HyperScroll">
        <item name="android:background">@color/hyperBlue</item>
    </style>

    <!-- HyperLayoutHeader -->
    <style name="HyperOption">
        <item name="android:layout_height">100dp</item>
        <item name="android:background">@drawable/testshape</item>
    </style>

    <!-- HyperTableData -->
    <style name="HyperScrollBackground"  parent="HyperScroll">
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <!-- HyperTableData -->
    <style name="HyperTableData">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- HyperTableContentLeftMargin -->
    <style name="HyperTableContentLeftMargin">
        <item name="android:layout_marginLeft">10dp</item>
    </style>

</resources>
